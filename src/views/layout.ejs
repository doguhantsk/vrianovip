<!doctype html>
<html lang="tr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= seo && seo.title ? seo.title : site.title %></title>
    <meta name="description" content="<%= seo && seo.description ? seo.description : site.description %>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style> .whatsapp-float{position:fixed;right:20px;bottom:20px;z-index:999}</style>
  </head>
  <body>
    <nav class="navbar navbar-light bg-light mb-3">
      <div class="container">
        <a class="navbar-brand" href="/"> <%= site.title %> </a>
      </div>
    </nav>

    <div class="container">
      <% if (typeof body === 'function') { %>
        <%- body() %>
      <% } else { %>
        <%- body %>
      <% } %>
    </div>

    <% if (site.whatsapp) { %>
      <a class="whatsapp-float" href="https://wa.me/<%= site.whatsapp.replace(/\D/g,'') %>?text=Merhaba" target="_blank">
        <img src="https://img.icons8.com/color/48/000000/whatsapp.png" alt="wa">
      </a>
    <% } %>

  </body>
  </html>
