<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body class="p-4">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Admin Paneli</h2>
        <div>
          <a href="/logout" class="btn btn-secondary">Çıkış</a>
        </div>
      </div>

      <h4>Site Ayarları</h4>
      <form method="POST" action="/admin/save-site" class="mb-4">
        <div class="mb-2"><input name="title" class="form-control" placeholder="Title" value="<%= site.title %>"></div>
        <div class="mb-2"><input name="description" class="form-control" placeholder="Description" value="<%= site.description %>"></div>
        <div class="mb-2"><input name="whatsapp" class="form-control" placeholder="WhatsApp number" value="<%= site.whatsapp %>"></div>
        <div class="mb-2"><input name="location" class="form-control" placeholder="Location" value="<%= site.location %>"></div>
        <div class="mb-2"><input name="mail_to" class="form-control" placeholder="Mail To" value="<%= site.mail_to %>"></div>
        <button class="btn btn-primary">Kaydet</button>
      </form>

      <h4>Sayfalar</h4>
      <% Object.keys(pages).forEach(function(p){ %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= p %></h5>
            <form method="POST" action="/admin/save-page/<%= p %>">
              <div class="mb-2">
                <label>SEO Başlık</label>
                <input name="seo_title" class="form-control" value="<%= (site.seo && site.seo[p]) ? site.seo[p].title : '' %>">
              </div>
              <div class="mb-2">
                <label>SEO Açıklama</label>
                <input name="seo_description" class="form-control" value="<%= (site.seo && site.seo[p]) ? site.seo[p].description : '' %>">
              </div>
              <div class="mb-2">
                <label>İçerik (HTML)</label>
                <textarea name="content" class="form-control" rows="6"><%= pages[p].content %></textarea>
              </div>
              <button class="btn btn-sm btn-success">Kaydet</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </body>
  </html>
